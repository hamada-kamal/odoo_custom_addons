<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="add_damage_popup" model="ir.ui.view">
            <field name="name">add damage popup</field>
            <field name="model">add.damage.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <h3>Write bref about damage reason?</h3>
                    <field name="reason" placeholder="write reason here..."/>
                    <footer>
                        <button name="add_damage" type="object" string="confirm"
                                class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>